{% extends 'base.html.twig' %}

{% block title %} Sf6 - Connexion{% endblock %}

{% block body %}
    <h1>Connexion</h1>
    {% if error %}
        <div class="alert alert-dismissible alert-primary">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
        </div>
    {% endif %}

    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <label for="username" class="form-label mt-4">Email</label>
            <input type="email" class="form-control" id="username" name="_username" placeholder="exemple@email.fr" value="{{ last_username }}">
        </div>
        <div class="form-group">
            <label for="password" class="form-label mt-4">Mot de passe</label>
            <input type="password" class="form-control" id="password" placeholder="********" name="_password" autocomplete="off">
        </div>
        <button type="submit" class="btn btn-primary mt-4">Se connecter</button>
    </form>
{% endblock %}
